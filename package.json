{
  "name": "gemini-desk",
  "version": "5.1.0",
  "description": "Gemini Desktop Wrapper",
  "author": "Hillel BH",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-updater": "^6.6.2",
    "marked": "^16.1.2"
  },
  "build": {
    "appId": "com.hillel.geminiapp",
    "productName": "GeminiDesk",
    "asar": true,
    "compression": "maximum",

    "publish": [
      {
        "provider": "github",
        "owner": "hillelkingqt",
        "repo": "GeminiDesk"
      }
    ],

    "mac": {
      "target": ["dmg", "zip"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": null,
      "format": "UDZO",
      "title": "${productName}-${version}-${arch}",
      "window": { "width": 600, "height": 400 },
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },

    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "include": "installer.nsh",
      "license": "build/EULA.txt"
    },

    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "icon1.png"
    },

    "icon": "icon1.png"
  }
}
